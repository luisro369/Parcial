<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avion.funciona.Activities.MainActivity"
    android:orientation="vertical"
    android:id="@+id/layout_default"
    >

        <fragment
            android:layout_margin="4dp"
            android:id="@+id/landscape2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            class="com.example.avion.funciona.Fragments.Selects"
            android:name="com.example.avion.funciona.Fragments.Selects"
            tools:layout="@layout/fragment_selects"
            >
        </fragment>

        <fragment
            android:id="@+id/landscape1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:name="com.example.avion.funciona.Fragments.Menus"
            class="com.example.avion.funciona.Fragments.Menus"
            tools:layout="@layout/fragment_menus"
            >
        </fragment>


</LinearLayout>