<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="0.25"
    android:orientation="vertical"
    android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXPENSES"
            android:textStyle="bold"
            android:textSize="24sp"
            android:background="@color/colorSecondaryDark" />


        <TextView
            android:id="@+id/account_nameEx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Account  # "
            android:textSize="18sp"
            android:textStyle="bold"/>



    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:background="#fff"
        >




        <TextView
            android:id="@+id/textView7"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Quantity"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Product"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Price"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="Subtotal"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewProduct2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewProduct1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewProduct3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewQuantity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewQuantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewQuantity3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewPrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewSubtotal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewSubtotal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewSubtotal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"/>


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL:"
        android:textStyle="bold"
        />

     <TextView
         android:id="@+id/totalEx"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="total"
         android:textStyle="bold"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>




</LinearLayout>